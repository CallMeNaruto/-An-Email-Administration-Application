import java.util.Scanner;
public class Emaill {
    private String firstName;
    private String lastName;
    private String password;
    private int passLength=10;
    private String department;
    private int mailboxCapacity=500;
    private String email;
    private String alternateEmail;
    private String companySufix="xyz.com";
    
    //Constructor to receieve firstname and lastname
    public Emaill(String firstName, String lastName)
    {
        this.firstName=firstName;
        this.lastName=lastName;
        
       
        
        //call a method asking for the department return the department
        this.department=setDepartment();
       
        
        //Call a method that return a random password
        this.password = setPassword(passLength);
        System.out.println("Your Password is : "+this.password);
        
        //combine eelements to genrate email
        this.email=firstName.toLowerCase()+"."+lastName.toLowerCase()+"@"+department+"."+companySufix;
       
    }   
    
    
    
    //Set Department
    private String setDepartment()
    {
        System.out.print("Enter the Departemnet code \n 1 for sales \n 2 for Developement \n 3 for Accounting \n 0 for none : \n Enter Here -> ");
        Scanner s = new Scanner(System.in);
        int deptChoice =s.nextInt();
        switch(deptChoice)
        {
            case 1 : return "sales";
                //not required break since method will not continue after return statement
            case 2 : return "Developement";
                
            case 3 : return "Accounting";
            
            default : return "";
              
                
        }
    }
    
        //Generate the random password
    private String setPassword(int length)
    {
        String passwordSet="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%";
        char[] password = new char[length];
        for(int i=0;i<length;i++)
        {
            int rand=(int)(Math.random()*passwordSet.length());
            password[i]=passwordSet.charAt(rand);
        }
        return new String(password);
        
    }
    
    //set mailbox capcity
    public void mailBoxCapacity(int capacity)
    {
        this.mailboxCapacity=capacity;
    }
    
    //set the alternate email
    public void setAlternateEmail(String altEmail)
    {
        this.alternateEmail = altEmail;
    }
    //change password
    public void changePass(String pass)
    {
        this.password=pass;
    }
    
    //get MailBox Capacity
    public int getMailboxCapacity(){return this.mailboxCapacity;}
    //get alternate Email
    public String getAltEmail(){return this.alternateEmail;}
    //get password
    public String getPassword(){return this.password;}
    


    public String showInfo()
    {
        return "Dsiplay Name "+firstName+" "+lastName+"\n"
                + "Company Email: "+email+
                "\nMailBox Capacity: "+mailboxCapacity+"mb";
    
    }


}
